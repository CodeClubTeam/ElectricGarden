{
  "extends": "react-app",
  "rules": {
    "no-restricted-imports": [
      "error",
      {
        "paths": [
          {
            "name": "styled-components",
            "message": "Please import from styled-components/macro."
          },
          {
            "name": "lodash",
            "message": "Please import from lodash-es."
          }
        ],
        "patterns": ["!styled-components/macro"]
      }
    ]
  }
}
