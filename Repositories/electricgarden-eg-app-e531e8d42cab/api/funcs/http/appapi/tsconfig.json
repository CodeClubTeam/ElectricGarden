{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "./out",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "references": [
    {
      "path": "../../../packages/doc-db"
    },
    {
      "path": "../../../packages/core"
    },
    {
      "path": "../../../packages/test-support"
    }
  ],
  "exclude": ["out", "node_modules", "static"]
}
